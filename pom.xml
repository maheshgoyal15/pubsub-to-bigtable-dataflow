      <plugins>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>exec-maven-plugin</artifactId>
          <version>3.1.0</version>
          <configuration>
          <mainClass>com.google.cloud.dataflow.pubsubtocbt.DataLoadPipeline</mainClass>
